<table cellspacing="0" cellpadding="0">
  <tbody>
    <tr>
      <td style="width: 20%; height: 100%;">
        <table style="height: 100%; width: 100%" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td class="PopupTitle">
                Folders
              </td>
            </tr>
            <tr>
              <td id="hf" style="height: 100%;vertical-align:top">
                <div>
                  <div class="FCKFolder FCKFolderNoPlusMinus" style="padding-left:8px">
                    <img class="PlusMinus" align="absmiddle" src="/javascripts/ckeditor/images/icon_6_folder.gif" width="16" height="16" />
                    <span class="Label">
                      <%= link_to "全部", "/ckeditor/_files?CKEditor=#{params[:CKEditor]}&CKEditorFuncNum=#{params[:CKEditorFuncNum]}&langCode=#{params[:langCode]}", :target => "files_container" %>
                    </span>
                  </div>
                </div>

                <% @tags.each do |tag| %>
                  <%= render "file_folder.html", :object => tag %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <% form_for(@tag, :url => "/ckeditor/create_file_folder", :method => :put) do |f|%>
                  <%= f.text_field :name, :size => "20" %>
                  <%= f.submit "创建目录" %>
                <% end %>
              </td>
            </tr>
          </tbody></table>
      </td>
      <td id="qB" class="PopupTabArea" style="width: 5px">
      </td>

      <td id="iO" style="height: 550px;width:100%; vertical-align:top">
        <iframe src="/ckeditor/_files?CKEditor=<%= params[:CKEditor] %>&CKEditorFuncNum=<%= params[:CKEditorFuncNum] %>&langCode=<%= params[:langCode] %>"
                name="files_container" style="height: 100%; width: 100%" frameborder="0"></iframe>
      </td>
    </tr>

  </tbody>
</table>